{
	"compilerOptions": {
		"strict": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"target": "es2022",
		"types": ["node", "vitest/globals"],
		"lib": ["es2022"],
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"declaration": true,

		"outDir": "dist"
	},
	"exclude": ["packages/**/dist"]
}
