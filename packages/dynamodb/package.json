{
	"name": "@awsless/dynamodb",
	"version": "0.0.33",
	"license": "MIT",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/awsless/awsless.git"
	},
	"bugs": {
		"url": "https://github.com/awsless/awsless/issues"
	},
	"files": [
		"dist"
	],
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.cjs",
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"test": "pnpm code test",
		"build": "pnpm tsup src/index.ts --format cjs,esm --dts --clean",
		"prepublish": "if pnpm test; then pnpm build; else exit; fi"
	},
	"vitest": {
		"maxConcurrency": 3,
		"singleThread": true,
		"exclude": [
			"test/aws/*"
		]
	},
	"dependencies": {
		"@aws-sdk/client-dynamodb": "3.332.0",
		"@aws-sdk/lib-dynamodb": "3.329.0",
		"@aws-sdk/smithy-client": "3.329.0",
		"@aws-sdk/util-dynamodb": "3.329.0",
		"@aws-sdk/util-utf8-node": "3.259.0",
		"@awsless/dynamodb-server": "workspace:^",
		"@awsless/utils": "workspace:^",
		"@awsless/validate": "workspace:^",
		"@heat/request-port": "^0.0.1",
		"aws-sdk-client-mock": "^2.1.1",
		"chunk": "^0.0.3",
		"ts-toolbelt": "^9.6.0"
	},
	"devDependencies": {
		"@awsless/big-float": "workspace:^",
		"superstruct": "^1.0.3",
		"@types/chunk": "^0.0.0"
	}
}
